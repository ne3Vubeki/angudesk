// ПАПКА ПРИЛОЖЕНИЯ
------------------------------------------------------------------------------------------------------------------------

-www
	-desktop							// папка приложения
		-common							// общие скрипты
			-controllers				// общие контроллеры (отвечают за бизнес логику и загрузку json)
				controllers.js
				controllers.min.js
			-directives					// общие директивы (отвечают за работу с DOM)
				directives.js
				directives.min.js
			-services					// общие фабрики, сервисы, переменные (часто используемые функции в приложении)
				services.js
				services.js
			-filters					// общие фильтры (отвечают за обработку данных в шаблонах)
				filters.js
				filters.min.js
		-images							// изображения, иконки только для этого приложения
			-icons
				files.svg
		-json							// общие данные для модулей
			-ru-ru						// общая папка русской локализации модулей
				locales.json
			routes.json					// данные роутинга
		-pages							// папка страниц приложения
			-main						// папка главной страницы - /m/
				-controllers			// контроллеры главной страницы
					mainCtrl.js
					mainCtrl.min.js
				-directives				// директива главной страницы (может не быть)
					directives.js
					directives.min.js
				-json					// данные локализаций главной страницы
					-ru-ru				// данные русской локализации главной страницы
						locales.json
				-templates				// шаблоны главной страницы
					files.html
			-error						// папка страницы ошибки - /m/404
				-controllers			// контроллер страницы ошибки
					errorCtrl.js
					errorCtrl.min.js
				-directives				// директива страницы ошибки (может не быть)
					directives.js
					directives.min.js
				-json					// данные локализаций страницы ошибки
					-ru-ru				// данные русской локализации страницы ошибки
						locales.json
				-templates				// шаблоны страницы ошибки
					files.html
			-pages (post, auth...)		// папка других страниц - /m/post, /m/auth...
				-controllers			// контроллер других страниц
					authCtrl.js
					authCtrl.min.js
				-directives				// директива других страниц (может не быть)
					directives.js
					directives.min.js
				-json					// данные локализаций других страниц
					-ru-ru				// данные русской локализации других страниц
						locales.json
				-templates				// шаблоны других страниц
					files.html
		-sass							// исходники стилей приложения
			-response
    			1023.scss				// адаптив стили
    		main.scss					// основные стили (стили главной страницы)
    		icons.scss					// иконки
    		authPage.scss				// стили страницы auth
		-templates						// общие шаблоны (например, шаблон верхнего меню)
			files.html
		app.js							// основной скрипт приложения, инициализация и подключение модулей
		app.min.js


// БИБЛИОТЕКИ ПРИЛОЖЕНИЯ
